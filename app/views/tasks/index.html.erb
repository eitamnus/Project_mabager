<% if notice.present? %>
  <p id="notice">
    <%= notice %>
  </p>
<% end %>

<h1 class="font-bold text-2xl">Task Manager</h1>

<div class="mt-4">
  <%= render "form", task:@task %>
</div>

<div id="tasks" data-controller="tasks">
  <h1>Tasks</h1>
  <div class="px-5">
    <%= render @tasks %>
  </div>
</div>


